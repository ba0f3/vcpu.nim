ASM   <- ^ ( ( \n / label  / code)* ig )* $
label <- ident ':'
code  <- ins (\n / \s+ arg (',' arg )* )?
ins   <- \a+
ident <- [a-zA-Z_][a-zA-Z_0-9\_]*
arg   <- sp* (ptr / reg / name / imm / '"' str '"') sp*
ptr   <- '[' sp* (reg / name) sp* ']'
reg   <- ('r' / 'w' / [hl]) [0-7]
name  <- ident
str   <- ("\\" . / [^"])*
imm   <- '0x' [0-9a-f]+ / [0-9a-f]+ 'h' !\w / \d+
ig    <- (\s / ';' @ \n)*
sp    <- ' '